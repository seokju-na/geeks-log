{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  }
}
