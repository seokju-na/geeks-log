{
  "name": "@geeks-log/event-system",
  "version": "0.0.0",
  "description": "Event system library for geeks log",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "esm/index.js",
  "author": {
    "name": "Seokju Na",
    "email": "seokju.me@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/ && rm -rf esm/ && tsc -p tsconfig.build.json && tsc -p tsconfig.esm.json",
    "test": "tsc -d --noEmit && yarn lint && jest",
    "lint": "eslint -c .eslintrc.js 'src/**/*.ts'",
    "deploy": "scripts/deploy.sh"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test/",
    "testRegex": ".spec.ts$",
    "moduleDirectories": [
      "node_modules/",
      "src/"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "types.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    }
  }
}
