{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist/",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "app/*": [
        "src/app/*"
      ],
      "domain/*": [
        "src/domain/*"
      ],
      "infra/*": [
        "src/infra/*"
      ],
      "ports/*": [
        "src/ports/*"
      ],
      "seed-work/*": [
        "src/seed-work/*"
      ],
      "testing/*": [
        "src/testing/*"
      ],
      "utility/*": [
        "src/utility/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
