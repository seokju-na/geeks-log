{
  "name": "@geeks-log/backend",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Seokju Na",
    "email": "seokju.me@gmail.com"
  },
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "serve": "yarn build && firebase serve --only functions",
    "test": "TARGET=test jest",
    "test:coverage": "TARGET=test jest --coverage",
    "test-e2e": "TARGET=test jest --config=e2e-tests/jest.config.json",
    "clean": "rimraf dist/",
    "build": "yarn clean && tsc -p src/tsconfig.build.json",
    "postbuild": "ts-node scripts/postbuild.ts"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "axios": "^0.18.0",
    "cors": "^2.8.5",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "firebase-admin": "^7.3.0",
    "firebase-functions": "^2.3.1",
    "rxjs": "^6.5.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^7.0.0",
    "@types/hapi__joi": "^15.0.1",
    "@types/jest": "^24.0.12",
    "@types/moxios": "^0.4.8",
    "@types/node": "^12.0.0",
    "@types/uuid": "^3.4.4",
    "firebase-functions-test": "^0.1.6",
    "fs-extra": "^8.0.1",
    "jest": "^24.8.0",
    "moxios": "^0.4.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/application/command-handlers/*.ts",
      "<rootDir>/src/application/utils/*.ts",
      "<rootDir>/src/domain/**/commands/*.ts",
      "<rootDir>/src/domain/**/reducers/*.ts",
      "<rootDir>/src/domain/**/validators/*.ts",
      "<rootDir>/src/domain/shared/**",
      "<rootDir>/src/infrastructure/**/*.ts",
      "!<rootDir>/src/infrastructure/third-parties/**",
      "<rootDir>/src/ports/**/*.ts",
      "!**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dummies/",
      "<rootDir>/src/testing/"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".spec.ts$",
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>src/tsconfig.spec.json"
      }
    }
  }
}
